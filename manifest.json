{
  "manifest_version": 3,
  "name": "Cybersecurity Link Scanner",
  "version": "1.0",
  "description": "Detects suspicious/phishing links in real-time.",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}